[Unit]
Description=compile kernel modules
Requires=network-online.target update-engine.service
After=network-online.target update-engine.service

[Service]
EnvironmentFile=/usr/share/coreos/release
EnvironmentFile=/usr/share/coreos/update.conf
EnvironmentFile=/etc/coreos/update.conf
Environment=MODULUS_DIR=/opt/modulus
Type=oneshot
RemainAfterExit=yes
ExecStart=-/bin/bash -c "${MODULUS_DIR}/modulus download $(echo %i | tr '-' ' ')"
ExecStart=-/bin/bash -c "${MODULUS_DIR}/modulus install $(echo %i | tr '-' ' ')"
ExecStart=/bin/bash -c "${MODULUS_DIR}/modulus -u compile $(echo %i | tr '-' ' ')"
ExecStart=/bin/bash -c "${MODULUS_DIR}/modulus install $(echo %i | tr '-' ' ')"
ExecStop=-/bin/bash -c "${MODULUS_DIR}/modulus -c download $(echo %i | tr '-' ' ')"
ExecStop=-/bin/bash -c "${MODULUS_DIR}/modulus -c install $(echo %i | tr '-' ' ')"
ExecStop=/bin/bash -c "${MODULUS_DIR}/modulus -cu compile $(echo %i | tr '-' ' ')"
ExecStop=/bin/bash -c "${MODULUS_DIR}/modulus install $(echo %i | tr '-' ' ')"
TimeoutStopSec=infinity

[Install]
WantedBy=multi-user.target
